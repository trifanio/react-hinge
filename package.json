{
  "name": "react-hinge",
  "version": "1.0.0",
  "description": "A tiny library to run GPU powered animations in React",
  "author": "Nikita Trifan (https://trifan.io)",
  "license": "MIT",
  "homepage": "https://restyle.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/souporserious/restyle.git"
  },
  "bugs": "https://github.com/souporserious/restyle/issues",
  "funding": "https://github.com/sponsors/souporserious",
  "keywords": [
    "react animations",
    "react",
    "web animations api",
    "waapi"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "dev": "npm run build -- --watch",
    "build:site": "npm run build --workspaces"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3"
  },
  "workspaces": [
    ".",
    "site"
  ]
}
